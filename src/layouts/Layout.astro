---
import "../reset.css";
import "../index.css";

interface Props {
	title?: string;
}

const { title: partialTitle = "not found" } = Astro.props;

const title = `${partialTitle === "index" ? "" : `${partialTitle} - `}smit barmase's website`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link
			rel="preload"
			href="/fonts/plex-sans.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<title>{title}</title>
		<script src="../scripts/theme.ts"></script>
		<script src="../scripts/scroll.ts"></script>
	</head>
	<body>
		<div id="container">
			<nav>
				<a href="/">home</a>
				<button id="toggle-theme" class="link"></button>
			</nav>
			<div id="content">
				<slot />
			</div>
		</div>
	</body>
</html>
