---
import "../index.css";

interface Props {
	title?: string;
}

const { title } = Astro.props;

const formattedTitle = `${title ? `${title} - ` : ``}smit barmase's website`;
---

<!doctype html>
<html lang="en">
	<head class="overscroll-none">
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link
			rel="preload"
			href="/fonts/plex-sans-text.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<title>{formattedTitle}</title>
		<script src="../scripts/theme.ts"></script>
	</head>
	<body
		class="antialiased text-lg sm:text-base flex justify-center min-h-dvh bg-shade text-black dark:bg-shade-dark dark:text-white"
	>
		<div class="flex-1 max-w-2xl bg-background dark:bg-background-dark">
			<nav
				class="p-4 flex justify-between border-b-4 border-shade dark:border-shade-dark bg-background dark:bg-background-dark"
			>
				<a href="/">home</a>
				<button id="toggle-theme" class="link"></button>
			</nav>
			<div class="prose p-4">
				<slot />
			</div>
		</div>
	</body>
</html>
